    <!-- Chart.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>

    <script>
        // Theme Toggle
        function toggleTheme() {
            const body = document.body;
            const currentTheme = body.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
        }

        // Load saved theme
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.body.setAttribute('data-theme', savedTheme);
        });

        // Mobile menu
        function toggleMenu() {
            document.getElementById('navLinks').classList.toggle('active');
        }

        // Close mobile menu when clicking a link
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                document.getElementById('navLinks').classList.remove('active');
            });
        });

        // Modal Functions
        function showModal(modalId) {
            document.getElementById(modalId).style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        }

        // Dashboard mit InfluxDB Proxy
        const PROXY_URL = './influx-proxy.php';
        let powerChart = null;

        async function fetchCurrentData() {
            try {
                const response = await fetch(`${PROXY_URL}?action=current`);
                const data = await response.json();

                if (data && data.results && data.results[0].series) {
                    const value = data.results[0].series[0].values[0][1];
                    updateDisplay(value);
                    document.getElementById('connectionStatus').innerHTML = '‚óè Verbunden';
                    document.getElementById('connectionStatus').className = 'status-online';
                } else {
                    throw new Error('Keine Daten');
                }
            } catch (error) {
                console.error('Fehler beim Abrufen der Daten:', error);
                document.getElementById('connectionStatus').innerHTML = '‚óè Verbindungsfehler';
                document.getElementById('connectionStatus').className = 'status-offline';
            }

            const now = new Date();
            document.getElementById('lastUpdate').textContent =
                `Letztes Update: ${now.toLocaleTimeString('de-DE')}`;
        }

        function updateDisplay(watts) {
            const kw = (watts / 1000).toFixed(1);
            const powerElement = document.getElementById('currentPower');
            const statusElement = document.getElementById('powerStatus');

            if (watts > 0) {
                // Bezug (positiv) - ORANGE
                powerElement.style.color = '#f59e0b';
                powerElement.textContent = kw;
                statusElement.textContent = '‚¨áÔ∏è BEZUG AUS DEM NETZ';
                statusElement.style.color = '#f59e0b';
                statusElement.style.borderColor = '#f59e0b';
            } else {
                // Einspeisung (negativ) - GR√úN
                powerElement.style.color = '#10b981';
                powerElement.textContent = Math.abs(kw);
                statusElement.textContent = '‚¨ÜÔ∏è EINSPEISUNG INS NETZ';
                statusElement.style.color = '#10b981';
                statusElement.style.borderColor = '#10b981';
            }
        }

        async function init12HourChart() {
            const ctx = document.getElementById('powerChart').getContext('2d');
            let labels = [];
            let powerData = [];

            try {
                const response = await fetch(`${PROXY_URL}?action=history12h`);
                const data = await response.json();

                if (data && data.results && data.results[0].series) {
                    const values = data.results[0].series[0].values;

                    values.forEach(point => {
                        const timestamp = new Date(point[0]);
                        labels.push(timestamp.toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' }));
                        const kw = point[1] !== null ? point[1] / 1000 : 0;
                        powerData.push(kw);
                    });
                } else {
                    for (let i = 0; i < 24; i++) {
                        labels.push('--:--');
                        powerData.push(0);
                    }
                }
            } catch (error) {
                console.error('Fehler beim Abrufen der Verlaufsdaten:', error);
                for (let i = 0; i < 24; i++) {
                    labels.push('--:--');
                    powerData.push(0);
                }
            }

            powerChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Leistung (kW)',
                        data: powerData,
                        borderColor: '#FF6B35',
                        backgroundColor: 'rgba(255, 107, 53, 0.1)',
                        segment: {
                            borderColor: ctx => {
                                const value = ctx.p1.parsed.y;
                                return value > 0 ? '#f59e0b' : '#10b981';
                            },
                            backgroundColor: ctx => {
                                const value = ctx.p1.parsed.y;
                                return value > 0 ? 'rgba(245, 158, 11, 0.1)' : 'rgba(16, 185, 129, 0.1)';
                            }
                        },
                        fill: true,
                        tension: 0.4,
                        pointRadius: 3,
                        pointHoverRadius: 5,
                        pointBackgroundColor: function(context) {
                            const value = context.parsed.y;
                            return value > 0 ? '#f59e0b' : '#10b981';
                        }
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) label += ': ';
                                    const value = context.parsed.y;
                                    label += value.toFixed(2) + ' kW';
                                    label += value > 0 ? ' (Bezug)' : ' (Einspeisung)';
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            title: {
                                display: true,
                                text: 'Leistung (kW)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Uhrzeit'
                            }
                        }
                    }
                }
            });
        }

        async function refresh12HourChart() {
            if (powerChart) {
                powerChart.destroy();
            }
            await init12HourChart();
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            fetchCurrentData();
            setInterval(fetchCurrentData, 5000);
            init12HourChart();
            setInterval(refresh12HourChart, 5 * 60 * 1000);
        });
    </script>
